.arrow{
    position: relative;
    height: 44rpx;
}

.arrow::after{
    content: "\e637";
    color: #dbdbdb;
    font-size: 80rpx;
    /* font-weight: bold; */
    position: absolute;
    right: 0;
    bottom: -20rpx;
}


.arrow text{
    /* position: absolute; */
    display: inline-block;
    padding-right: 70rpx;
    line-height: 44rpx;
    
}





/* 扫码 */

.scan {
    margin-top: 45rpx;
    text-align: center;
}

.btn {
    display: inline-block;
    position: relative;
    background-color: #00a0ae;
    border-radius: 50% 50%;
    border: 22rpx white solid;
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    color: white;
}

.btn image{
    position: absolute;
    width: 100rpx;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;

}

.tip{
    margin-top: 22rpx;
    text-align: center;
    color: #dd621a;
    font-size: 25rpx;
    letter-spacing: 5rpx;
}

