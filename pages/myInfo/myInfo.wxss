.bg {
    /* background-color: #e6e2e7; */
    background-color: #f2f6f9;
    height: auto;
}

.header {
    border: 1rpx transparent solid;
    width: 100vw;
    background-color: #00a0ae;
}

.userInfo{
    padding-left: 80rpx;
    display: flex;

    
}

.avout{
    flex: 3;
}

.avatar{
    border-radius: 50% 50%;
    overflow: hidden;
    font-size: 0;
    width: 150rpx;
    
}

.avatar image{
    width: 150rpx;
    height: 150rpx;
}

.userText{
    flex: 7;
    color: white;
}

.userText>view:first-child{
    font-size: 40rpx;
    margin: 10rpx 0;
}

.userText>view:last-child{
    font-size: 30rpx;
    line-height: 30rpx;
}

.clean{
    padding:10rpx 0 ;
}



/* 信息栏 */

.content{
    display: block;
    margin: 0 auto;
    margin-top: 25rpx;
    background-color: #ffffff;
    width: 92vw;
    /* border: 1px solid #e6e2e7; */
    border-radius: 15rpx;
}

.in-content{
    width: 85vw;
    margin: 0 auto;
    /* margin-top: 10rpx; */
    background-color: #ffffff;
}

.item{
    display: flex;
    padding: 30rpx 0 ;
    padding-left: 80rpx;

    border-bottom: #e4e4e4 1px solid;

}

.item:last-child{
    border: 0;
}

.item text{
    color: #dd621a;
}

.item>view:first-child{
    /* flex: 3;     */
    font-size: 35rpx;
}

.item>view:last-child{
    flex: 7;
    font-size: 27rpx;
    text-align: right;
    align-self: center;
    
}

.content-title{
    color: gray;
    margin: 40rpx 0 20rpx 5vw;
    font-weight: bold;
    font-size: 32rpx;
}

